    </action>
  </item>
  <item label="Web Browser">
    <action name="Execute">
      <command>google-chrome</command>
    </action>
  </item>
  <separator/>
  <menu id="daily-menu"/>
  <menu id="productivity-menu"/>
  <menu id="work-menu"/>
