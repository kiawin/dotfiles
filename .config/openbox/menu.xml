<menu id="system-menu" label="System">
  <item label="Set Openbox">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Set LXappearance">
    <action name="Execute">
      <command>lxappearance</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Set Power Management">
    <action name="Execute">
      <command>xfce4-power-manager-settings</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator/>
  <item label="Set Wallpaper">
    <action name="Execute">
      <command>nitrogen</command>
    </action>
  </item>
  <item label="Get Wallpaper">
    <action name="Execute">
      <command>love-wallpaper</command>
    </action>
  </item>
  <separator/>
  <item label="Manage Notifications">
    <action name="Execute">
      <command>xfce4-notifyd-config</command>
    </action>
  </item>
  <item label="Manage Screensaver">
    <action name="Execute">
      <command>xscreensaver-demo</command>
    </action>
  </item>
  <item label="Manage Screen">
    <action name="Execute">
      <command>lxrandr</command>
    </action>
  </item>
  <separator/>
  <item label="Manage Printers">
    <action name="Execute">
      <command>xdg-open http://localhost:631/</command>
      <startupnotify>
        <enabled>no</enabled>
        <icon>cups</icon>
      </startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reset tint2">
    <action name="Execute">
      <command>restart-tint2</command>
    </action>
  </item>
  <item label="Reset Conky">
    <action name="Execute">
      <command>restart-conky</command>
    </action>
  </item>
  <item label="Reset Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

